<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.smarthome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddApplianceActivity"
            android:label="@string/title_activity_add_appliance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SetupRooms"
            android:label="@string/title_activity_setup_rooms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Scenes"
            android:label="@string/title_activity_scenes"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
